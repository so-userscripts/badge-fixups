{
  "name": "badge-fixups",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "uglify": "uglifyjs dist/* -c -m -o dist/badgefixups.js",
    "build-min": "tsc && npm run uglify",
    "build-lib": "tsc --target es2019 --outFile dist/badgefixups-lib.js",
